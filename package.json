  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-Amblard/canvas-loop-engine.git"
  },
  "author": {
    "name": "Julien Amblard",
    "email": "amblard.julien@gmail.com",
    "url": "https://github.com/Julien-Amblard"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Julien-Amblard/canvas-loop-engine/issues"
  },
  "homepage": "https://github.com/Julien-Amblard/canvas-loop-engine#readme",
