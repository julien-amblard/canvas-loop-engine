    "ci-test": "yarn jest --verbose --coverage",
    "report-coverage": "codecov --token=$CODECOV_TOKEN",
    "build": "rimraf ./dist && webpack --config webpack.config.js",
    "dev": "webpack-dev-server --mode development --config webpack.dev.js",
